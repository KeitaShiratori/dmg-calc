<!DOCTYPE html>
<html>
<head>
  <title><%= I18n.t('application.head.title') %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" href="/"><%= I18n.t('application.navbar.title') %></a>
      </div>
    </div>
  </nav>
  <div class="container">
    <% if notice %>
      <!--メッセージをふわっと表示して自然に消すjsメソッド-->
      <!--http://alfredobarron.github.io/smoke/#/-->
      <script>
        $.smkAlert({text:'<%= notice %>', type:'success'});
      </script>
    <% end %>

    <%= yield %>

  </div>


