<div class="form-horizontal row">
  <%= form_for(@message) do |f| %>
    <% if @message.errors.present? %>
      <div class="alert alert-danger">
        <%= alert %>
        <ul>
          <% @message.errors.full_messages.each do |full_message| %>
            <li>
              <%= full_message %>
            </li>
          <% end %> 
        </ul>
      </div>
    <% end %>
  
    <div class="form-group">
      <label class="col-lg-3 col-md-4 col-sm-3 col-xs-4 control-label">ユーザー名</label>
      <div class="col-lg-9 col-md-8 col-sm-9 col-xs-8">
        <%= f.text_field :name, class:"form-control", placeholder:"入力してください" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-lg-3 col-md-4 col-sm-3 col-xs-4 control-label">年齢</label>
      <div class="col-lg-9 col-md-8 col-sm-9 col-xs-8">
        <%= f.text_field :age, class:"form-control", placeholder:"入力してください" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-lg-3 col-md-4 col-sm-3 col-xs-4 control-label">メッセージ</label>
      <div class="col-lg-9 col-md-8 col-sm-9 col-xs-8">
        <%= f.text_area :body, class:"form-control" ,placeholder:"入力してください" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-9 col-lg-offset-3 col-md-8 col-md-offset-4 col-sm-9 col-sm-offset-3 col-xs-8 col-xs-offset-4">
        <%= f.submit "投稿", class: "btn btn-sm btn-primary btn-block" %>
      </div>
    </div>
  <% end %>
</div>
