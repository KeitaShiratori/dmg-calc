<div class="form-horizontal row">
  <%= form_for(@message) do |f| %>
    <% if @message.errors.present? %>
      <div class="alert alert-danger">
        <%= alert %>
        <ul>
          <% @message.errors.full_messages.each do |full_message| %>
            <li>
              <%= full_message %>
            </li>
          <% end %> 
        </ul>
      </div>
    <% end %>
  
    <div class="form-group">
      <label class="col-lg-2 control-label">ユーザー名</label>
      <div class="col-lg-10">
        <%= f.text_field :name, class:"form-control", placeholder:"入力してください" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-lg-2 control-label">年齢</label>
      <div class="col-lg-10">
        <%= f.text_field :age, class:"form-control", placeholder:"入力してください" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-lg-2 control-label">メッセージ</label>
      <div class="col-lg-10">
        <%= f.text_area :body, class:"form-control" ,placeholder:"入力してください" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <%= f.submit class: "btn btn-sm btn-primary btn-block" %>
      </div>
    </div>
  <% end %>
</div>
